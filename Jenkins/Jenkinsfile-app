pipeline {
    agent any

    environment {
        // Docker Hub credentials
        DOCKER_HUB_USER = 'saqib1devops'           // Tumhara Docker Hub username
        DOCKER_HUB_REPO = 'devops-app'             // Repository name
        DOCKER_IMAGE = "${DOCKER_HUB_USER}/${DOCKER_HUB_REPO}"
        DOCKER_TAG  = "latest"

        // EC2 info
        EC2_IP = '157.175.148.1'                   // Tumhare Webserver EC2 ka public IP
        EC2_USER = 'ubuntu'                        // EC2 username (default ubuntu for Ubuntu AMI)
    }

    stages {

        stage('Checkout SCM') {
            steps {
                git(
                    url: 'https://github.com/engrsaqi14-sketch/jenkin_testing.git',
                    branch: 'main',
                    credentialsId: '3bbda6a1-6983-466c-8122-922eec7b6029'    // GitHub credentials (Jenkins credential ID)
                )
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('APP') {  // Agar Dockerfile APP folder mein hai
                    sh "docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} ."
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'dockerhub-creds', // Jenkins mein DockerHub credentials ID
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PASS'
                )]) {
                    sh """
                        echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin
                        docker push ${DOCKER_IMAGE}:${DOCKER_TAG}
                    """
                }
            }
        }

        stage('Deploy to EC2') {
            steps {
                withCredentials([sshUserPrivateKey(
                    credentialsId: 'jenkins_testin', // Jenkins private key ID
                    keyFileVariable: 'KEYFILE',
                    usernameVariable: 'USER'
                )]) {
                    sh """
                        ssh -i $KEYFILE -o StrictHostKeyChecking=no $USER@${EC2_IP} '
                            docker stop devops-app || true
                            docker rm devops-app || true
                            docker run -d --name devops-app -p 80:3000 ${DOCKER_IMAGE}:${DOCKER_TAG}
                        '
                    """
                }
            }
        }
    }

    post {
        always {
            echo "Pipeline finished."
        }
        success {
            echo "Deployment successful!"
        }
        failure {
            echo "Pipeline failed. Check logs for errors."
        }
    }
}
